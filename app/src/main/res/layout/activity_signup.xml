<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignupActivity">

    <EditText
        android:id="@+id/signupEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="71dp"
        tools:text="Email" />

    <EditText
        android:id="@+id/signuppasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="146dp"
        android:contentDescription="password"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password"
        tools:text="password" />

    <EditText
        android:id="@+id/confirmPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="216dp"
        android:ems="10"
        android:hint="confirm Password"
        android:inputType="textAutoComplete|textPassword" />

    <EditText
        android:id="@+id/firstNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="183dp"
        android:ems="10"
        android:hint="your first name"
        android:inputType="textPersonName"
        android:text="firstName" />

    <EditText
        android:id="@+id/lastNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="121dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="LastName"
        tools:text="LastName " />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/signupEmailText"
        android:layout_alignTop="@+id/SignupResetButton"
        android:text="Signup" />

    <Button
        android:id="@+id/SignupResetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/signupEmailText"
        android:layout_marginBottom="45dp"
        android:text="Reset" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="109dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/signupEmailText"
        android:layout_marginTop="29dp"
        android:text="Signup" />

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="93dp"
        android:layout_height="41dp"
        android:layout_alignEnd="@+id/signupEmailText"
        android:layout_alignTop="@+id/textView"
        android:text="Or you are a member" />
</RelativeLayout>